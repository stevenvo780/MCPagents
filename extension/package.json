{
  "name": "autonomous-mcp-helper",
  "displayName": "Autonomous MCP Helper",
  "description": "Extensión que invoca automáticamente el servidor MCP para generar pasos siguientes y aplicar sugerencias.",
  "version": "0.0.7",
  "publisher": "local",
  "repository": { "type": "git", "url": "https://example.com/your/repo.git" },
  "license": "MIT",
  "categories": ["Other"],
  "keywords": ["mcp", "autonomous", "openai", "assistant"],
  "engines": { "vscode": ">=1.85.0" },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      { "command": "autonomousMcpHelper.manualRun", "title": "Autonomous MCP: Manual Run", "icon": "$(play)" },
      { "command": "autonomousMcpHelper.toggleEngine", "title": "Autonomous MCP: Toggle Engine", "icon": "$(debug-start)" },
      { "command": "autonomousMcpHelper.clearHistory", "title": "Autonomous MCP: Clear History", "icon": "$(clear-all)" },
      { "command": "autonomousMcpHelper.exportHistory", "title": "Autonomous MCP: Export History", "icon": "$(export)" },
      { "command": "autonomousMcpHelper.resetSettings", "title": "Autonomous MCP: Reset Settings", "icon": "$(refresh)" }
    ],
    "viewsContainers": {
      "activitybar": [
        { "id": "autonomousMcp", "title": "Autonomous Copilot", "icon": "resources/icon.svg" }
      ]
    },
    "views": {
      "autonomousMcp": [
        { "id": "autonomousMcpDashboard", "name": "Dashboard", "icon": "$(dashboard)" },
        { "id": "autonomousMcpHistory", "name": "Historial", "icon": "$(history)" },
        { "id": "autonomousMcpSettings", "name": "Configuración", "icon": "$(settings-gear)" }
      ]
    },
    "menus": {
      "view/title": [
        { "command": "autonomousMcpHelper.manualRun", "when": "view == autonomousMcpDashboard", "group": "navigation@1" },
        { "command": "autonomousMcpHelper.toggleEngine", "when": "view == autonomousMcpDashboard", "group": "navigation@2" },
        { "command": "autonomousMcpHelper.clearHistory", "when": "view == autonomousMcpHistory", "group": "navigation@1" },
        { "command": "autonomousMcpHelper.exportHistory", "when": "view == autonomousMcpHistory", "group": "navigation@2" },
        { "command": "autonomousMcpHelper.resetSettings", "when": "view == autonomousMcpSettings", "group": "navigation@1" }
      ]
    },
    "configuration": {
      "title": "Autonomous Copilot",
      "properties": {
        "autonomousMcpHelper.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar motor autónomo"
        },
        "autonomousMcpHelper.analysisIntervalMs": {
          "type": "number",
          "default": 30000,
          "description": "Intervalo (ms) para análisis automático del proyecto"
        },
        "autonomousMcpHelper.contextLines": {
          "type": "number",
          "default": 500,
          "description": "Máximo de líneas de contexto"
        },
        "autonomousMcpHelper.autoApplySimpleFixes": {
          "type": "boolean",
          "default": false,
          "description": "Aplicar automáticamente correcciones simples (imports, formato, etc.)"
        },
        "autonomousMcpHelper.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones de sugerencias"
        },
        "autonomousMcpHelper.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperatura para OpenAI (creatividad vs precisión)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
