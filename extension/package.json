{
  "name": "autonomous-mcp-helper",
  "displayName": "Autonomous MCP Helper",
  "description": "Extensión que invoca automáticamente el servidor MCP para generar pasos siguientes y aplicar sugerencias.",
  "version": "0.1.1",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://example.com/your/repo.git"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "autonomous",
    "openai",
    "assistant"
  ],
  "engines": {
    "vscode": ">=1.85.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "autonomousMcpHelper.autonomousai",
        "name": "autonomousai",
        "fullName": "Autonomous AI",
        "description": "AI autónomo que responde usando OpenAI y analiza tu código",
        "isSticky": true,
        "commands": [
          {
            "name": "analyze",
            "description": "Analiza el código actual y proporciona sugerencias"
          },
          {
            "name": "fix",
            "description": "Encuentra y sugiere correcciones para errores"
          },
          {
            "name": "optimize",
            "description": "Optimiza el código seleccionado o actual"
          },
          {
            "name": "explain",
            "description": "Explica cómo funciona el código"
          }
        ],
        "disambiguation": [
          {
            "category": "autonomous_coding",
            "description": "El usuario quiere ayuda autónoma con código, análisis, correcciones o optimizaciones",
            "examples": [
              "Analiza mi código y sugiere mejoras",
              "¿Qué errores tiene este archivo?",
              "Optimiza esta función",
              "Explícame cómo funciona este código",
              "Sugiere mejores prácticas"
            ]
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "name": "analyzeCode",
        "displayName": "Analyze Code",
        "modelDescription": "Analiza código y proporciona sugerencias de mejora usando OpenAI",
        "inputSchema": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "description": "El código a analizar"
            },
            "language": {
              "type": "string",
              "description": "El lenguaje de programación del código"
            },
            "task": {
              "type": "string",
              "enum": [
                "analyze",
                "fix",
                "optimize",
                "explain"
              ],
              "description": "Tipo de análisis a realizar"
            }
          },
          "required": [
            "code"
          ]
        }
      },
      {
        "name": "getProjectContext",
        "displayName": "Get Project Context",
        "modelDescription": "Obtiene contexto del proyecto actual incluyendo archivos, errores y estructura",
        "inputSchema": {
          "type": "object",
          "properties": {
            "includeErrors": {
              "type": "boolean",
              "description": "Incluir errores y warnings del proyecto"
            },
            "includeFiles": {
              "type": "boolean",
              "description": "Incluir lista de archivos principales"
            }
          }
        }
      },
      {
        "name": "askOpenAI",
        "displayName": "Ask OpenAI",
        "modelDescription": "Hace una consulta directa a OpenAI con contexto del proyecto",
        "inputSchema": {
          "type": "object",
          "properties": {
            "question": {
              "type": "string",
              "description": "La pregunta o prompt para OpenAI"
            },
            "includeContext": {
              "type": "boolean",
              "description": "Incluir contexto automático del workspace"
            },
            "temperature": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Temperatura para la respuesta (0 = preciso, 1 = creativo)"
            }
          },
          "required": [
            "question"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "autonomousMcpHelper.manualRun",
        "title": "Autonomous MCP: Manual Run",
        "icon": "$(play)"
      },
      {
        "command": "autonomousMcpHelper.toggleEngine",
        "title": "Autonomous MCP: Toggle Engine",
        "icon": "$(debug-start)"
      },
      {
        "command": "autonomousMcpHelper.clearHistory",
        "title": "Autonomous MCP: Clear History",
        "icon": "$(clear-all)"
      },
      {
        "command": "autonomousMcpHelper.exportHistory",
        "title": "Autonomous MCP: Export History",
        "icon": "$(export)"
      },
      {
        "command": "autonomousMcpHelper.resetSettings",
        "title": "Autonomous MCP: Reset Settings",
        "icon": "$(refresh)"
      },
      {
        "command": "autonomousMcpHelper.mcpAsk",
        "title": "MCP: Ask Question",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "autonomousMcpHelper.mcpAnalyzeCode",
        "title": "MCP: Analyze Code",
        "icon": "$(search)"
      },
      {
        "command": "autonomousMcpHelper.mcpHealth",
        "title": "MCP: Health Check",
        "icon": "$(pulse)"
      },
      {
        "command": "autonomousMcpHelper.mcpContext",
        "title": "MCP: Get Project Context",
        "icon": "$(info)"
      },
      {
        "command": "autonomousMcpHelper.testHistory",
        "title": "MCP: Test History (Debug)",
        "icon": "$(debug-console)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autonomousMcp",
          "title": "Autonomous Copilot",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "autonomousMcp": [
        {
          "id": "autonomousMcpDashboard",
          "name": "Dashboard",
          "icon": "$(dashboard)"
        },
        {
          "id": "autonomousMcpHistory",
          "name": "Historial",
          "icon": "$(history)"
        },
        {
          "id": "autonomousMcpSettings",
          "name": "Configuración",
          "icon": "$(settings-gear)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "autonomousMcpHelper.manualRun",
          "when": "view == autonomousMcpDashboard",
          "group": "navigation@1"
        },
        {
          "command": "autonomousMcpHelper.toggleEngine",
          "when": "view == autonomousMcpDashboard",
          "group": "navigation@2"
        },
        {
          "command": "autonomousMcpHelper.clearHistory",
          "when": "view == autonomousMcpHistory",
          "group": "navigation@1"
        },
        {
          "command": "autonomousMcpHelper.exportHistory",
          "when": "view == autonomousMcpHistory",
          "group": "navigation@2"
        },
        {
          "command": "autonomousMcpHelper.resetSettings",
          "when": "view == autonomousMcpSettings",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Autonomous Copilot",
      "properties": {
        "autonomousMcpHelper.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar motor autónomo"
        },
        "autonomousMcpHelper.analysisIntervalMs": {
          "type": "number",
          "default": 30000,
          "description": "Intervalo (ms) para análisis automático del proyecto"
        },
        "autonomousMcpHelper.contextLines": {
          "type": "number",
          "default": 500,
          "description": "Máximo de líneas de contexto"
        },
        "autonomousMcpHelper.autoApplySimpleFixes": {
          "type": "boolean",
          "default": false,
          "description": "Aplicar automáticamente correcciones simples (imports, formato, etc.)"
        },
        "autonomousMcpHelper.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar notificaciones de sugerencias"
        },
        "autonomousMcpHelper.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperatura para OpenAI (creatividad vs precisión)"
        },
        "autonomousMcpHelper.autoInterceptCopilot": {
          "type": "boolean",
          "default": true,
          "description": "Interceptar automáticamente consultas de Copilot y usar MCP"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}